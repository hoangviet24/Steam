@model IEnumerable<SteamNextGen.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Quản lý game</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm game mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Detail</th>
            <th>Price</th>
            <th>Trending</th>
            <th>Top Sale</th>
            <th>Top Play</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="max-width: 150px;">
                </td>
                <td>@item.Detail</td>
                <td>
                    @if (item.Price == 0)
                    {
                        <span>Free</span>
                    }
                    else
                    {
                        @item.Price.ToString("C")
                    }
                </td>
                <td>
                    @if (item.isTrendingProduct)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    @if (item.isTopSaleProduct)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    @if (item.isTopPlayProduct)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
