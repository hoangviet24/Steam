@model IEnumerable<IdentityUser>
@using Microsoft.AspNetCore.Identity

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-danger">ResetPassword</a>
                </td>
            </tr>
        }
    </tbody>
</table>
