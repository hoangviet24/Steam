<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div style="margin-left: 100px;" class="carousel-inner">
        @{
            var index = 0;
        }
        @foreach (var item in Model)
        {
            <div class="carousel-item @(index == 0 ? "active" : "")" data-bs-interval="3000">
                <a  class="link-offset-2 link-underline link-underline-opacity-0" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                    <div><img src="@item.ImageUrl" class="d-block w-50" alt="..."></div>
                    <div class="text">
                        <h3>@item.Name</h3>
                        @if (item.Price != 0)
                        {
                            <p>Giá tiền: @item.Price.ToString("C")</p>
                        }
                        else
                        {
                            <p>Giá tiền: Free</p>
                        }
                    </div>

                </a>
            </div>

            index++;
        }
    </div>
    <button class="carousel-control-prev " type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
        <span class="carousel-control-prev-icon " aria-hidden="true"></span>
        <span class="visually-hidden cl-black">Previous</span>
    </button>
    <button class="carousel-control-next " type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
        <span class="carousel-control-next-icon " aria-hidden="true"></span>
        <span class="visually-hidden cl-black">Next</span>
    </button>
</div>
<h5 class="title">Game đề cử</h5>
<div class="container text-center">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col">
                <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                    <img class="ImgGamehot" src="@item.ImageUrl" alt="">
                    <h4>@item.Name</h4>
                    @if (item.Price != 0)
                    {
                        <p>Giá tiền: @item.Price.ToString("C")</p>
                    }
                    else
                    {
                        <p>Giá tiền: Free</p>
                    }
                </a>
                
            </div>
        }
    </div>
</div>
