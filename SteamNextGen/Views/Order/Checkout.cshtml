@model Order
<form asp-action="Checkout" method="post" role="form">
    <section style="margin-bottom:174px" data-bs-version="5.1" class="form6 cid-tsFfsp7eqK" id="form6-n">
        <div class="container">
            <div class="mt-5">
                <!-- Checkout Panel Information-->
                <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-4">
                    <h3 class="fs-5 fw-bolder m-0 lh-1">Shipping Address</h3>
                </div>
                <div class="row">
                    <!-- First Name-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">
                                First
                                name
                            </label>
                            <input asp-for="FirstName" type="text" class="form-control"
                                   placeholder="" value="" required="">
                        </div>
                    </div>
                    <!-- Last Name-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Last name</label>
                            <input asp-for="LastName" type="text" class="form-control"
                                   id="lastNameBilling" placeholder="" value="" required="">
                        </div>
                    </div>
                    <!-- Email-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email - You need to enter your account email correctly</label>
                            <input type="email" class="form-control" asp-for="Email"
                                   placeholder="" >
                        </div>
                    </div>
                    <!-- Email-->
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" asp-for="Phone"
                                   placeholder="0123456789">
                        </div>
                    </div>
                </div>
                <div class="col-auto mbr-section-btn align-center">
                    <a class="btn btn-primary w-20 " asp-controller="Order" asp-action="CheckoutComplete">
                        <button type="submit" class="btn btn-primary display-4">
                            Place
                            Order
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </section>
</form>
