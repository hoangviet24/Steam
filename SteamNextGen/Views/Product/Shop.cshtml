@model IEnumerable<SteamNextGen.Models.Product>

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @{
            var index = 0;
            var trending = Model.Take(5);
        }
        @foreach (var item in trending)
        {
            <div class="carousel-item @(index == 0 ? "active" : "")" data-bs-interval="3000">
                <a class="link-offset-2 link-underline link-underline-opacity-0" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                    <img width="65%" height="300px" src="@item.ImageUrl" class="d-block w-sm-100 mx-auto shadow rounded">

                    <div class="carousel-caption d-flex flex-column align-items-start justify-content-center text-start" style="background: rgba(0, 0, 0, 0.6); width: 65%; padding: 10px; bottom: 0; left: 50%; transform: translateX(-50%);">
                        <h3 class="text-white">@item.Name</h3>
                        @if (item.Price != 0)
                        {
                            <p class="text-warning">Giá tiền: @item.Price.ToString("C")</p>
                        }
                        else
                        {
                            <p class="text-success">Free to play</p>
                        }
                    </div>
                </a>
            </div>
            index++;
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>



<h3 class="title">Game đề cử</h3>
<hr />
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-dark text-white shadow rounded">
                    <a class="text-decoration-none" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                        <img src="@item.ImageUrl" class="card-img-top rounded-top" alt="Product Image" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">
                                @if (item.Price != 0)
                                {
                                    <span class="text-warning">Giá tiền: @item.Price.ToString("C")</span>
                                }
                                else
                                {
                                    <span class="text-success">Free to play</span>
                                }
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
