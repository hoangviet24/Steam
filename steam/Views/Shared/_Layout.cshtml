<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - steam</title>
    <link rel="stylesheet href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/Style.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/steam.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/bootstrap/dist/css/bootstrap-grid.css"/>
    <link rel="stylesheet" href="~/assets/bootstrap/dist/css/bootstrap-grid.min.css"/>
    <link rel="stylesheet" href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" />
    <title>Shop</title>
    <script src="~/assets/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/assets/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/Collapse/JavaScript.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Product" asp-action="Shop"><img src="~/assets/Image/Logo_Steam.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="#navbarSupportedContent1">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Shop">STORE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Contact">SUPPORT</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <a class="navbar-brand" href="/HTML/Login.html"><img width="30px" src="~/assets/Image/Avatar.png"></a>
                        <a href="/HTML/Library.html"><button class="btn btn-primary" type="button">Library</button></a>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <section data-bs-version="5.1" class="footer7 cid-tsQdrs3Vrj" once="footers" id="footer7-13">
            <div class="container">
                <div class="media-container-row align-center mbr-white">
                    <div class="col-12">
                        <p class="mbr-text mb-0 mbr-fonts-style display-7">
                            © Copyright 2025&nbsp; - <a href="https://www.facebook.com/hoangviet.vo.751/ " target="_blank">Võ Hoàng Việt</a>
                            - <a href="https://www.facebook.com/socola.em" target="_blank">Nguyễn Minh Đức</a> 
                            - <a href="https://www.facebook.com/Vienafnguyen" target="_blank">Nguyễn Thanh Viễn</a>
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
