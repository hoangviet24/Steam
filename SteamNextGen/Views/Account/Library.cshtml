@model IEnumerable<Product>

@if (@Model.Count() != 0)
{
    <div class="container Library ">
        <div class="container  Library">
            <div class="row ">
                <div style="border-right:2px solid white " class="col-sm-4 adside-game ">
                    <ul class="list-group ">
                        @foreach (var item in Model)
                        {
                            <a class="text-decoration-none" asp-controller="Product" asp-action="_Detail" asp-route-id="@item.Id">
                            <li class="list-group-item bg-dark">
                                <img src="@item.ImageUrl" width="50px"><span style="margin-left:20px;color:white">@item.Name</span>
                                <a class="text-decoration-none" asp-controller="Account" asp-action="DelItem" asp-route-id="@item.Id">
                                    <button type="button" class="btn btn-danger">Delete</button>
                                </a>
                            </li>
                            </a>

                        }

                    </ul>
                </div>
                <div class="col-sm-8 content-game">
                    @foreach (var item in Model)
                    {
                        <div class="img-game">
                            <img width="500px" src="@item.ImageUrl" alt="">
                        </div>
                        <div class="detail-game">
                            <h3 >@item.Detail</h3>
                        </div>
                        <hr />
                    }

                </div>
            </div>
        </div>
    </div>
}
else
{
    <div style="margin-bottom:337px" class="container">
        <br><br><br><br>
        <div class="text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/148/148767.png" class="img-fluid"
                 style="width: 200px; height: 200px; margin-left: auto; margin-right: auto"
                 alt="...">
            <br>
            <h1><strong>You have not purchased or downloaded the game yet </strong></h1>
            <br>
            <p>Thank you for your contact!</p>
            <a class="btn btn-primary w-20 " asp-controller="Product" asp-action="Shop">
                Start Shopping Again
            </a>
        </div>
    </div>
}
