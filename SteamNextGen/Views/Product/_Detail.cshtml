@model SteamNextGen.Models.Product
<br />
<div class="card bg-dark" style="max-width:30rem;height:500px;margin:0 auto;padding:10px;">
    <div class="card-wrapper">
        <div class="row align-items-center">
            <img  src="@Model.ImageUrl" alt="Website Builder">
            <div class="col-12 col-lg">
                <div class="text-box">
                    <h3>
            <strong>@Model.Name</strong>
        </h3>
                    <p class="mbr-text mbr-fonts-style display-7">
                        @Model.Detail
                    </p>
                    <div class="cost">
                        @if (Model.Price != 0)
                        {
                            <span>Giá tiền: @Model.Price.ToString("c")</span>
                        }
                        else
                        {
                            <span>Free to play</span>
                        }
                    </div>
                    <div class="mbr-section-btn pt-3">
                        <button type="button" class="btn btn-primary display-4" onclick="download()">
                            <a href="#" class="btn btn-primary display-4" data-download-url="DownloadUrl">
                                <span class="mbrib-cart-add mbr-iconfont mbr-iconfont-btn"></span>Tải xuống&nbsp;
                            </a>
                        </button>

                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br/> 
<script>
    function download() {
        if (confirm('Bạn có muốn tải xuống tệp này?')) {
            // Xử lý xác nhận tải xuống
            alert('Tệp đang được tải xuống...');
            return true;
        } else {
            // Xử lý hủy tải xuống
            alert('Tải xuống đã bị hủy.');
            return false;
        }
    }
</script>