@model Contact
<form asp-action="Contact" method="POST" role="form" class="form">

    <div  class="dragArea row">
        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3" data-for="name">
            <input type="text" asp-for="Name" name="name" placeholder="Name" data-form-field="name"
                   class="form-control" value="" id="name-form7-q" required="">
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3" data-for="email">
            <input type="email" asp-for="Email" name="email" placeholder="Email" data-form-field="email"
                   class="form-control" value="" id="email-form7-q" required="" />
        </div>
        <div data-for="phone" class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
            <textarea type="text" asp-for="Mess" class="form-control" rows="5" placeholder="Message" data-form-field="Mess" required=""></textarea>
        </div>
        <div class="mbr-section-btn align-center">
            <a class="btn btn-primary w-20 " asp-controller="Contact" asp-action="ContactComplete">
                <button type="submit" class="btn btn-primary display-4">
                    Submit
                </button>
            </a>
        </div>
    </div>
</form>